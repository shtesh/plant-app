<div>
    <h2>Plant Detail</h2>
    <div class="container-plantdetail">
    <img src="{{imageURL}}" class="w3-round" />
    <p class="bi bi-bookmark">{{name}}</p>
    <p class="bi bi-graph-up">Height: {{height}}</p>
    <p class="bi bi-brightness-high">Light: {{light}}</p>
    <p class="bi bi-flower1">Flowering time: {{floweringTime}}</p>
    <ul class="bi bi-geo-alt">Native:
        {{#each native}}
    </div>
        <li class="bi bi-cursor">{{this}}</li>
        {{/each}}
    </ul>
    <p class="bi bi-hash">Tags: {{tags}}</p>
    {{#if userId}}
    <form action="/user/favorites/{{_id}}" method="POST">
        <button type="submit">
            {{#if isFavoritePlant}}
            <div class="bi bi-trash">Remove from Favorites</div>
            {{else}}
            <div class="bi bi-heart">Add to Favorites</div>
            {{/if}}
        </button>
    </form>
    {{/if}}
    {{#if isOwner}}
    <h3>Edit plant</h3>
    {{> editPlant}}
    <h3>Delete plant</h3>
    {{> deleteButton}}
    {{/if}}
</div>