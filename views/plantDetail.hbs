<div>
    <h2>Plant Detail</h2>
    <img src="{{imageURL}}" />
    <p>{{name}}</p>
    <p>Height: {{height}}</p>
    <p>Light: {{light}}</p>
    <p>Flowering time: {{floweringTime}}</p>
    <ul> Native:
        {{#each native}}
        <li>{{this}}</li>
        {{/each}}
    </ul>
    <p>Tags: {{tags}}</p>
    {{#if userId}}
    <form action="/user/favorites/{{_id}}" method="POST">
        <button type="submit">
            {{#if isFavoritePlant}}
            Remove plant from favorites
            {{else}}
            Add plant to favorites
            {{/if}}
        </button>
    </form>
    {{/if}}
</div>